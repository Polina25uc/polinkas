        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-16,-6">
        <Grid x:Name="_6" Margin="403,41,68,135" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" RenderTransformOrigin="0.511,0.704">
