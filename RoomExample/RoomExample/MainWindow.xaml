            <Label x:Name="LabelWidth1" Content="" HorizontalAlignment="Left" Margin="188,58,0,0" VerticalAlignment="Top" Width="97" Background="#FFFBF7F7"/>

        </Grid>
        <TextBlock x:Name="Выход" HorizontalAlignment="Left" Margin="698,15,0,0" TextWrapping="Wrap" Text="Выход" VerticalAlignment="Top"/>
        <Button x:Name="ButtonOpen1" Content="Открыть" HorizontalAlignment="Left" Margin="46,321,0,0" VerticalAlignment="Top" Height="30" Width="97" RenderTransformOrigin="0.502,-0.154" Click="ButtonOpen1_Click"/>
        <Button x:Name="ButtonAll" Content="Посчитать вместе" HorizontalAlignment="Left" Margin="46,363,0,0" VerticalAlignment="Top" Height="32" Width="107" Click="ButtonAll_Click"/>
        <Button x:Name="ButtonOpen2" Content="Открыть" HorizontalAlignment="Left" Margin="271,321,0,0" VerticalAlignment="Top" Height="32" Width="82" Click="ButtonOpen2_Click"/>
        <Label x:Name="LabelAllArea" Content="Общая площадь" HorizontalAlignment="Left" Margin="258,369,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.652,1.331" Width="108"/>
